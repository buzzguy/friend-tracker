{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/components/*": ["src/components/*"],
			"@/pages/*": ["src/pages/*"],
			"@/types/*": ["src/types/*"],
			"@/utils/*": ["src/utils/*"],
			"@/hooks/*": ["src/hooks/*"],
			"@/contexts/*": ["src/contexts/*"],
			"@/services/*": ["src/services/*"],
			"@/styles/*": ["src/styles/*"],
			"@/assets/*": ["src/assets/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["**/*.ts"]
}
